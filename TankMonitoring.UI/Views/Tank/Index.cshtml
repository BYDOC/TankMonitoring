@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<LastStatusViewModel>
    <meta http-equiv="refresh" content="20" />
<h1>Tank Values Lists</h1>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Tank Datatable
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Tank Datetime</th>
                    <th>Tank Name</th>
                    <th>Level</th>
                    <th>Flow Rate</th>
                    <th>Avg Temp</th>
                    <th>TOV</th>
                    <th>NSV</th>
                    <th>WIA</th>
                    <th>VCF</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.TankCurrentDate</td>
                    <td>@item.Name</td>
                    <td>@item.Level</td>
                    <td>@item.FlowRate</td>
                    <td>@item.AvgTemp</td>
                    <td>@item.TOV</td>
                    <td>@item.NSV</td>
                    <td>@item.WIA</td>
                    <td>@item.VCF</td>
                </tr>
                }

            </tbody>
            <tfoot>
                <tr>
                    <th>Tank Datetime</th>
                    <th>Product Name</th>
                    <th>Level</th>
                    <th>Flow Rate</th>
                    <th>Avg Temp</th>
                    <th>TOV</th>
                    <th>NSV</th>
                    <th>WIA</th>
                    <th>VCF</th>
                </tr>
            </tfoot>

        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#datatablesSimple').DataTable();
});
    </script>
